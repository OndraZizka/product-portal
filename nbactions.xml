<?xml version="1.0" encoding="UTF-8"?>
<actions>
        <action>
            <actionName>build</actionName>
            <goals>
                <goal>install</goal>
            </goals>
            <properties>
                <skipTests>true</skipTests>
            </properties>
        </action>
        <action>
            <actionName>rebuild</actionName>
            <goals>
                <goal>clean</goal>
                <goal>install</goal>
            </goals>
            <properties>
                <skipTests>true</skipTests>
            </properties>
        </action>
        <action>
            <actionName>run</actionName>
            <goals>
                <goal>clean</goal>
                <goal>install</goal>
                <goal>jboss-as:deploy</goal>
            </goals>
            <properties>
                
                <deploy.force>true</deploy.force>
                <skipTests>true</skipTests>
            </properties>
        </action>
    </actions>
